<!-- Interface emprunts -->
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.bibliotheque.controller.EmpruntController" prefWidth="800" prefHeight="500">
    <Label text="Gestion des Emprunts" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TableView fx:id="tableEmprunts" prefHeight="300">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50" />
            <TableColumn fx:id="colLivreTitre" text="Titre du Livre" prefWidth="200" />
            <TableColumn fx:id="colMembreNom" text="Nom du Membre" prefWidth="150" />
            <TableColumn fx:id="colDateEmprunt" text="Date Emprunt" prefWidth="100" />
            <TableColumn fx:id="colDateRetourPrevue" text="Retour Prévu" prefWidth="100" />
            <TableColumn fx:id="colDateRetourEffective" text="Retour Effectif" prefWidth="100" />
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Label text="ISBN:" />
        <TextField fx:id="isbnField" promptText="Entrez l'ISBN" prefWidth="150" />
        <Label text="ID Membre:" />
        <TextField fx:id="membreIdField" promptText="Entrez l'ID du membre" prefWidth="150" />
        <Button fx:id="emprunterButton" text="Emprunter" onAction="#emprunterLivre" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="retournerButton" text="Retourner le Livre Sélectionné" onAction="#retournerLivre" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
    </HBox>

    <Label fx:id="statusLabel" text="" style="-fx-text-fill: green;" />
</VBox> 
