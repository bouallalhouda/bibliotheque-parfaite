<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="600.0" prefWidth="700.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bibliotheque.controller.EmpruntController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    
    <!-- Titre -->
    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Gestion des Emprunts" />
    
    <!-- Section Emprunt -->
    <VBox spacing="8.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5;">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        
        <Label style="-fx-font-weight: bold;" text="Formulaire d'Emprunt" />
        
        <HBox spacing="10.0">
            <TextField fx:id="txtISBN" prefWidth="200.0" promptText="ISBN du livre" />
            <TextField fx:id="txtIdMembre" prefWidth="200.0" promptText="ID du membre" />
            <Button onAction="#handleEmprunter" prefWidth="100.0" style="-fx-font-size: 12;" text="Emprunter" />
        </HBox>
    </VBox>
    
    <!-- Section Retour -->
    <VBox spacing="8.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5;">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        
        <Label style="-fx-font-weight: bold;" text="Formulaire de Retour" />
        
        <HBox spacing="10.0">
            <TextField fx:id="txtIdEmprunt" prefWidth="200.0" promptText="ID de l'emprunt" />
            <Button onAction="#handleRetourner" prefWidth="100.0" style="-fx-font-size: 12;" text="Retourner" />
        </HBox>
    </VBox>
    
    <!-- Label pour titre tableau -->
    <Label style="-fx-font-weight: bold;" text="Emprunts en cours" />
    
    <!-- TableView des emprunts -->
    <TableView fx:id="tableEmprunts" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="300.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colIdEmprunt" minWidth="80.0" prefWidth="80.0" text="ID Emprunt" />
            <TableColumn fx:id="colLivre" minWidth="150.0" prefWidth="150.0" text="Livre (Titre)" />
            <TableColumn fx:id="colMembre" minWidth="100.0" prefWidth="100.0" text="Membre (Nom)" />
            <TableColumn fx:id="colDateEmprunt" minWidth="120.0" prefWidth="120.0" text="Date Emprunt" />
            <TableColumn fx:id="colDateRetourPrevue" minWidth="120.0" prefWidth="120.0" text="Retour prÃ©vu" />
        </columns>
    </TableView>
</VBox>
